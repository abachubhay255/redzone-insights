{
  "name": "server",
  "version": "1.0.0",
  "description": "Express GraphQL Server",
  "private": true,
  "main": "./dist/index.js",
  "type": "module",
  "nodemonConfig": {
    "verbose": true,
    "ignore": [],
    "watch": [
      "dist"
    ],
    "ext": "js",
    "exec": "node --inspect=5859 --conditions=development ./dist/index.js",
    "signal": "SIGKILL",
    "delay": 50
  },
  "imports": {
    "#s/*": {
      "development": "./dist/*",
      "default": "./src/*"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "yarn run nodemon & yarn run watch",
    "nodemon": "nodemon",
    "watch": "tsc -w"
  },
  "author": "Akhil Bachubhay",
  "license": "UNLICENSED",
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^8.0.1",
    "@graphql-tools/load": "^8.0.2",
    "@graphql-tools/utils": "^10.3.2",
    "axios": "^1.7.2",
    "axios-cache-interceptor": "^1.5.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.9.0",
    "graphql-config": "^5.0.3",
    "graphql-http": "^1.22.1",
    "openai": "^4.52.7",
    "ruru": "^2.0.0-beta.13"
  },
  "devDependencies": {
    "@graphql-eslint/eslint-plugin": "^3.20.1",
    "@types/cors": "^2",
    "@types/express": "^4.17.21",
    "@types/graphql": "^14.5.0",
    "@types/node": "^20.14.10",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
